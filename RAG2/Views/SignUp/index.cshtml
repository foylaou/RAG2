@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "SignUp";
}

<!DOCTYPE html>


<main id="main" class="main">

    <div class="pagetitle">
      <h1>註冊畫面</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/SignUp">註冊</a></li>
          <li class="breadcrumb-item active">註冊畫面</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>註冊</h2>
                </div>
                <div class="card-body">
                    <form id="SignUp-form" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="username" class="form-label">使用者名稱</label>
                            <input type="text" class="form-control" id="username" name="username">
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">電子郵件</label>
                            <input type="Email" class="form-control" id="Email" name="Email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">密码</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">再次輸入密碼</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                        </div>
                        <div>
                            <span style="color:red">@ViewBag.Msg</span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">注册</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</main><!-- End #main -->